<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_quiz">

    <!-- PATTERN BACKGROUND -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/vector"
        android:alpha="0.8" />

    <!-- ================= HEADER (KHÔNG SCROLL) ================= -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/tv_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Difficulty: EASY"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Time: 75:00"
            android:textColor="#FF5252"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Question 1 / 100"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ================= SCROLL CONTENT ================= -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerContainer"
        android:paddingBottom="20dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- QUESTION -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:text="Nội dung câu hỏi dài (reading) sẽ hiển thị ở đây..."
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- OPTION A -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_rb_a"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/tv_a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="A. Option A"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- OPTION B -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_rb_b"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="B. Option B"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- OPTION C -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_rb_c"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/tv_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="C. Option C"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- OPTION D -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_rb_d"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp">

                <TextView
                    android:id="@+id/tv_d"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="D. Option D"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- BUTTONS -->
            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#86FF7E"
                android:text="XÁC NHẬN"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_prev"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#BDBDBD"
                android:text="QUAY LẠI" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
